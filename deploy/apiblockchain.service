[Unit]
Description=APIBlockchain Checkout Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/srv/apiblockchain
Environment=PYTHONUNBUFFERED=1
Environment=DATA_DIR=/var/lib/apiblockchain
Environment=JWT_SECRET_KEY=__REPLACE_ME__
ExecStart=/srv/apiblockchain/venv/bin/python -m uvicorn main:app --host 127.0.0.1 --port 8000
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
